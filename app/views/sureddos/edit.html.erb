<div class="main-content">
  <h4>スレッドを編集する</h4>
  
  <%= form_with model: @sureddo, local: true do |form| %>
    <div class="form-group">
      <%= form.label :title, 'タイトル' %>
      <%= form.text_field :title, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :description, '説明欄' %>
      <%= form.text_area :description, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :image, '画像を添付できます！' %>
      <%= form.file_field :image, class: 'form-control' %>
      <% if @sureddo.image.attached? %>
        <div>
          <h5>現在の画像:</h5>
          <img src="<%= url_for(@sureddo.image) %>" alt="現在の画像" style="max-width: 200px;">
        </div>
      <% end %>
    </div>

    <div>
      <%= form.label :tag_list, "タグ" %>
      <%= form.text_field :tag_list, value: @sureddo.tags.map(&:name).join(", "), class: 'form-control' %>
      <small>タグは,で区切って入力してください。（例)Switch,3DS,PlayStation4,PlayStation5</small>
    </div>

    <div class="form-group">
      <%= form.submit '更新', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
