<h1>掲示板一覧</h1>
<div class="posts">
  <% @posts.each do |post| %>
    <div class="post">
      <img src="<%= post.thumbnail %>" alt="<%= post.title %>のサムネイル">
      <h2><%= post.title %></h2>
      <p>投稿者: <%= post.user_name %></p>

      <% if post.video_url.present? %>
        <iframe width="560" height="315"
          src="https://www.youtube.com/embed/<%= post.video_url.split('v=')[1] %>"
          frameborder="0" allowfullscreen></iframe>
      <% end %>
    </div>
  <% end %>
</div>
